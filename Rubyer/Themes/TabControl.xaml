                            <Setter Property="HorizontalAlignment" TargetName="templateRoot" Value="Left"/>
                            <Setter TargetName="mainBorder" Property="CornerRadius" Value="0 2 2 0"/>
                            <Setter Property="Margin" TargetName="contentPresenter" Value="2,3"/>

