<UserControl x:Class="RubyerDemo.Views.Icon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:rubyer ="clr-namespace:Rubyer;assembly=Rubyer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="IconView">
    <Grid Style="{StaticResource FadeLeftStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Padding="0 5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox Width="250" Text="{Binding SearchText,UpdateSourceTrigger=PropertyChanged}" rubyer:TextBoxHelper.IsClearable="True"
                         rubyer:TextBoxHelper.Placeholder="搜索图标">
                    <rubyer:TextBoxHelper.PreContent>
                        <Viewbox>
                             <Button Style="{DynamicResource TextMidButton}" IsDefault="True" Command="{Binding Search}">
                            <rubyer:Icon Type="SearchLine"/>
                        </Button>
                        </Viewbox>
                    </rubyer:TextBoxHelper.PreContent>
                </TextBox>
                <TextBox Width="170" Text="{Binding CurrentIcon}" Margin="30 0" rubyer:TextBoxHelper.PreContent="选中"/>
                <TextBlock Foreground="{DynamicResource DefaultForeground}">
                    原图标地址:  
                    <Hyperlink NavigateUri="https://www.iconfont.cn/collections/detail?spm=a313x.7781069.1998910419.d9df05512&amp;cid=25353"
                               Click="Hyperlink_Click">
                        REMIX ICON
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>

        <GroupBox Header="图标-Icon" Grid.Row="1">
            <ListBox ItemsSource="{Binding IconTypes}" SelectedItem="{Binding CurrentIcon}"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     VirtualizingPanel.ScrollUnit="Pixel" 
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.CacheLength="100" 
                     VirtualizingPanel.CacheLengthUnit="Item"
                     VirtualizingPanel.IsVirtualizingWhenGrouping="True">
                <!--<ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Horizontal">
                        </VirtualizingStackPanel>
                        --><!--<WrapPanel Orientation="Horizontal" />--><!--
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>-->
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <!--<ScrollViewer HorizontalScrollBarVisibility="Disabled">-->
                        <DockPanel Margin="5 2" Height="26" ToolTip="{Binding}">
                            <rubyer:Icon DockPanel.Dock="Left" Type="{Binding}" Height="23" Width="23" HorizontalAlignment="Center" Margin="10 0 20 0"/>
                            <TextBlock DockPanel.Dock="Right" Text="{Binding}" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                        </DockPanel>
                        <!--</ScrollViewer>-->
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
    </Grid>
</UserControl>
