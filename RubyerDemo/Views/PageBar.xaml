<UserControl x:Class="RubyerDemo.Views.PageBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:rubyer="clr-namespace:Rubyer;assembly=Rubyer"
             xmlns:viewModels="clr-namespace:RubyerDemo.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewModels:PageBarViewModel,
                                              IsDesignTimeCreatable=True}"
             mc:Ignorable="d">
    <ScrollViewer Style="{StaticResource RubyerSmallScrollViewer}"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <GroupBox Margin="0 0 0 10" Header="页码条-PageBar">
                <StackPanel Width="650">
                    <TextBlock Margin="10"
                               HorizontalAlignment="Center"
                               Text="{Binding PageBarMessage}" />

                    <rubyer:PageBar Margin="10"
                                    CurrentBackground="{DynamicResource Light}"
                                    CurrentForeground="{DynamicResource LightForeground}"
                                    PageIndexChanged="PageBar_PageIndexChanged"
                                    PageIndexChangedCommand="{Binding PageIndexChanged}"
                                    PageSize="{Binding PageSize}"
                                    PageSizeChanged="PageBar_PageSizeChanged"
                                    PageSizeChangedCommand="{Binding PageSizeChanged}"
                                    Total="{Binding Total}" />
                    <rubyer:PageBar Margin="10"
                                    IsShowPageSize="True"
                                    PageIndexChanged="PageBar_PageIndexChanged"
                                    PageIndexChangedCommand="{Binding PageIndexChanged}"
                                    PageSize="{Binding PageSize}"
                                    PageSizeChanged="PageBar_PageSizeChanged"
                                    PageSizeChangedCommand="{Binding PageSizeChanged}"
                                    Total="{Binding Total}"
                                    PageIndex="3" />
                    <rubyer:PageBar Margin="10"
                                    CurrentBackground="{DynamicResource Accent}"
                                    CurrentForeground="{DynamicResource AccentForeground}"
                                    IsShowTotal="True"
                                    PageIndexChanged="PageBar_PageIndexChanged"
                                    PageIndexChangedCommand="{Binding PageIndexChanged}"
                                    PageSize="{Binding PageSize}"
                                    PageSizeChanged="PageBar_PageSizeChanged"
                                    PageSizeChangedCommand="{Binding PageSizeChanged}"
                                    Total="{Binding Total}"
                                    PageIndex="5" />
                    <rubyer:PageBar Margin="10"
                                    IsShowPageSize="True"
                                    IsShowTotal="True"
                                    PageIndexChanged="PageBar_PageIndexChanged"
                                    PageIndexChangedCommand="{Binding PageIndexChanged}"
                                    PageSize="{Binding PageSize}"
                                    PageSizeChanged="PageBar_PageSizeChanged"
                                    PageSizeChangedCommand="{Binding PageSizeChanged}"
                                    Total="{Binding Total}"
                                    PageIndex="7" />
                    <rubyer:PageBar Margin="10"
                                    IsShowPageSize="True"
                                    IsShowTotal="True"
                                    ItemContainerStyle="{StaticResource TextPageBarItem}"
                                    PageIndexChangedCommand="{Binding PageIndexChanged}"
                                    PageSize="{Binding PageSize}"
                                    PageSizeChangedCommand="{Binding PageSizeChanged}"
                                    Total="{Binding Total}"
                                    PageIndex="7" />
                </StackPanel>

            </GroupBox>
        </Grid>
    </ScrollViewer>
</UserControl>
