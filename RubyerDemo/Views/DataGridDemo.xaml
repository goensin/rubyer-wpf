<UserControl x:Class="RubyerDemo.Views.DataGridDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:core="clr-namespace:System;assembly=mscorlib"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:rubyer="http://rubyer.io/winfx/xaml/toolkit"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             xmlns:vm="clr-namespace:RubyerDemo.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:DataGridViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="GenderTypeEnum"
                            MethodName="GetValues"
                            ObjectType="{x:Type core:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type Type="vm:GenderType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <smtx:XamlDisplay UniqueKey="DataGridDemo">
        <ScrollViewer>
            <Grid Width="600"
                  rubyer:GridHelper.ColumnSpacing="1"
                  rubyer:GridHelper.RowDefinitions="Auto, Auto"
                  rubyer:GridHelper.RowSpacing="10">
                <GroupBox Header="数据表格-DataGrid">
                    <Grid Margin="5" rubyer:GridHelper.RowDefinitions="Auto, *">
                        <TextBlock Margin="0 0 0 10" Text="列头字体、对齐设置,全选列" />

                        <DataGrid Grid.Row="1"
                                  Height="200"
                                  HorizontalContentAlignment="Center"
                                  rubyer:ControlHelper.CornerRadius="{DynamicResource AllContainerCornerRadius}"
                                  rubyer:HeaderHelper.Background="{DynamicResource Accent}"
                                  rubyer:HeaderHelper.FontFamily="隶书"
                                  rubyer:HeaderHelper.FontSize="18"
                                  rubyer:HeaderHelper.FontWeight="Bold"
                                  rubyer:HeaderHelper.Foreground="{DynamicResource WhiteForeground}"
                                  rubyer:HeaderHelper.HorizontalAlignment="Center"
                                  rubyer:HeaderHelper.Padding="8"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  GridLinesVisibility="None"
                                  ItemsSource="{Binding Persons}"
                                  SelectionUnit="Cell">
                            <DataGrid.Resources>
                                <Style BasedOn="{StaticResource WaveLoading}" TargetType="rubyer:Loading" />
                            </DataGrid.Resources>
                            <rubyer:DataGridHelper.EmptyView>
                                <Border Background="{DynamicResource Primary}">
                                    <TextBlock HorizontalAlignment="Center" FontSize="22">自定义无数据内容</TextBlock>
                                </Border>
                            </rubyer:DataGridHelper.EmptyView>
                            <DataGrid.Columns>
                                <rubyer:DataGridSelectCheckBoxColumn Width="85"
                                                                     Binding="{Binding IsSelected}"
                                                                     Header="全选" />
                                <DataGridTextColumn Width="60"
                                                    Binding="{Binding Id}"
                                                    Header="序号" />
                                <DataGridCheckBoxColumn Width="60"
                                                    Binding="{Binding IsSelected}"
                                                    Header="选择" />
                                <DataGridTextColumn Width="70"
                                                    Binding="{Binding Name}"
                                                    Header="姓名" />
                                <DataGridTextColumn Width="60"
                                                    Binding="{Binding Age}"
                                                    Header="年龄" />

                                <DataGridComboBoxColumn Width="80"
                                                        Header="性别"
                                                        ItemsSource="{Binding Source={StaticResource GenderTypeEnum}}"
                                                        SelectedItemBinding="{Binding Gender}" />

                                <DataGridTemplateColumn Width="*" Header="操作">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Height="Auto" Padding="5">
                                                    <rubyer:Icon Type="PencilLine" />
                                                </Button>
                                                <Button Style="{StaticResource AccentButton}"
                                                        Height="Auto"
                                                        Margin="2 0 0 0"
                                                        Padding="5"
                                                        Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}">
                                                    <rubyer:Icon Type="DeleteBinLine" />
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Row="1" Header="数据表格-DataGrid">
                    <Grid Margin="5" rubyer:GridHelper.RowDefinitions="Auto, *">
                        <TextBlock Margin="0 0 0 10" Text="隔行变色，选中颜色设置，展开详细内容，自动排序" />
                        <ListView VerticalContentAlignment="Center" Grid.Row="1"
                              rubyer:ControlHelper.CornerRadius="{DynamicResource AllContainerCornerRadius}"
                              rubyer:HeaderHelper.Background="{DynamicResource Primary}"
                              rubyer:HeaderHelper.FontSize="15"
                              rubyer:HeaderHelper.FontWeight="Bold"
                              rubyer:HeaderHelper.Foreground="{DynamicResource WhiteForeground}"
                              rubyer:HeaderHelper.Padding="5 8"
                              rubyer:ItemsControlHelper.ItemMargin="2 1"
                              rubyer:ItemsControlHelper.ItemPadding="5"
                              ItemsSource="{Binding Persons}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Width="80"
                                                DisplayMemberBinding="{Binding Id}"
                                                Header="序号" />
                                    <GridViewColumn Width="100"
                                                DisplayMemberBinding="{Binding Name}"
                                                Header="名字" />
                                    <GridViewColumn Width="100"
                                                DisplayMemberBinding="{Binding Age}"
                                                Header="年龄" />
                                    <GridViewColumn Width="100"
                                                Header="性别" >
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox rubyer:ItemsControlHelper.EnumValuesToItemsSource="True" SelectedItem="{Binding Gender}">
                                                </ComboBox>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="50" Header="选中">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding IsSelected}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
