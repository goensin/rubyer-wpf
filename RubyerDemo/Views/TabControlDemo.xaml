<UserControl x:Class="RubyerDemo.Views.TabControlDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:rubyer="http://rubyer.io/winfx/xaml/toolkit"
             xmlns:viewModels="clr-namespace:RubyerDemo.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewModels:TabControlViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Grid.RowSpan="4"
                    Margin="10"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
            <Button Padding="10 0"
                    Command="{Binding AddTabItem}"
                    Content="添加 TabItem" />
        </StackPanel>

        <GroupBox Grid.Row="1"
                  Grid.Column="1"
                  Margin="0 0 0 10"
                  Header="默认选项卡-TabControl">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Top  -->
                <TabControl Grid.RowSpan="2"
                            Grid.Column="1"
                            Height="150"
                            ItemsSource="{Binding Poetries}"
                            SelectedItem="{Binding SelectedPoetry}"
                            TabStripPlacement="Top">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center" Text="{Binding Content}" />
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>

                <!--  Bottom  -->
                <TabControl Grid.Row="2"
                            Grid.Column="1"
                            rubyer:ControlHelper.FocusedBrush="{DynamicResource Accent}"
                            rubyer:TabControlHelper.IsClearable="True"
                            ItemsSource="{Binding Poetries}"
                            SelectedItem="{Binding SelectedPoetry}"
                            TabStripPlacement="Bottom">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate />
                    </TabControl.ContentTemplate>
                </TabControl>

                <!--  Left  -->
                <TabControl Grid.RowSpan="3"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            ItemsSource="{Binding Poetries}"
                            SelectedItem="{Binding SelectedPoetry}"
                            TabStripPlacement="Left">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate />
                    </TabControl.ContentTemplate>
                </TabControl>

                <!--  Right  -->
                <TabControl Grid.RowSpan="3"
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            rubyer:TabControlHelper.IsClearable="True"
                            ItemsSource="{Binding Poetries}"
                            SelectedItem="{Binding SelectedPoetry}"
                            TabStripPlacement="Right">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate />
                    </TabControl.ContentTemplate>
                </TabControl>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="2"
                  Grid.Column="1"
                  Margin="0 0 0 10"
                  Header="卡片选项卡-LineTabControl">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Top  -->
                <TabControl Style="{StaticResource LineTabControl}"
                            Grid.Row="0"
                            Grid.Column="1"
                            rubyer:HeaderHelper.Background="AliceBlue"
                            rubyer:HeaderHelper.Foreground="{StaticResource BlackForeground}"
                            rubyer:TabControlHelper.IsClearable="True"
                            ItemsSource="{Binding Poetries}"
                            SelectedItem="{Binding SelectedPoetry}"
                            TabStripPlacement="Top">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate />
                    </TabControl.ContentTemplate>
                </TabControl>

                <!--  Bottom  -->
                <TabControl Style="{StaticResource LineTabControl}"
                            Grid.Row="2"
                            Grid.Column="1"
                            rubyer:ControlHelper.FocusedForegroundBrush="{DynamicResource Accent}"
                            ItemsSource="{Binding Poetries}"
                            TabStripPlacement="Bottom">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate />
                    </TabControl.ContentTemplate>
                </TabControl>

                <!--  Left  -->
                <TabControl Style="{StaticResource LineTabControl}"
                            Grid.RowSpan="3"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            rubyer:ControlHelper.FocusedForegroundBrush="{DynamicResource Success}"
                            rubyer:TabControlHelper.IsClearable="True"
                            ItemsSource="{Binding Poetries}"
                            TabStripPlacement="Left">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate />
                    </TabControl.ContentTemplate>
                </TabControl>

                <!--  Right  -->
                <TabControl Style="{StaticResource LineTabControl}"
                            Grid.RowSpan="3"
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            rubyer:ControlHelper.FocusedForegroundBrush="{DynamicResource Warning}"
                            ItemsSource="{Binding Poetries}"
                            TabStripPlacement="Right">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate />
                    </TabControl.ContentTemplate>
                </TabControl>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="3"
                  Grid.Column="1"
                  Margin="0 0 0 10"
                  Header="线条选项卡-CardTabControl">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Top  -->
                <TabControl Style="{StaticResource CardTabControl}"
                            Grid.Row="0"
                            Grid.Column="1"
                            rubyer:TabControlHelper.IsClearable="True"
                            ItemsSource="{Binding Poetries}"
                            SelectedItem="{Binding SelectedPoetry}"
                            TabStripPlacement="Top">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate />
                    </TabControl.ContentTemplate>
                </TabControl>

                <!--  Bottom  -->
                <TabControl Style="{StaticResource CardTabControl}"
                            Grid.Row="2"
                            Grid.Column="1"
                            rubyer:ControlHelper.FocusedBrush="{DynamicResource DefaultBackground}"
                            rubyer:ControlHelper.FocusedForegroundBrush="{DynamicResource DefaultForeground}"
                            rubyer:HeaderHelper.Background="{DynamicResource BorderLighter}"
                            ItemsSource="{Binding Poetries}"
                            TabStripPlacement="Bottom">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate />
                    </TabControl.ContentTemplate>
                </TabControl>

                <!--  Left  -->
                <TabControl Style="{StaticResource CardTabControl}"
                            Grid.RowSpan="3"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            rubyer:ControlHelper.FocusedBrush="{DynamicResource Success}"
                            rubyer:HeaderHelper.Background="Transparent"
                            rubyer:HeaderHelper.Foreground="{DynamicResource DefaultForeground}"
                            rubyer:TabControlHelper.IsClearable="True"
                            ItemsSource="{Binding Poetries}"
                            TabStripPlacement="Left">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate />
                    </TabControl.ContentTemplate>
                </TabControl>

                <!--  Right  -->
                <TabControl Style="{StaticResource CardTabControl}"
                            Grid.RowSpan="3"
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            rubyer:ControlHelper.FocusedBrush="{DynamicResource Warning}"
                            ItemsSource="{Binding Poetries}"
                            TabStripPlacement="Right">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate />
                    </TabControl.ContentTemplate>
                </TabControl>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
