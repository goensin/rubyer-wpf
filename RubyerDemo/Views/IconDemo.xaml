<UserControl x:Class="RubyerDemo.Views.IconDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:rubyer="clr-namespace:Rubyer;assembly=Rubyer"
             xmlns:viewModels="clr-namespace:RubyerDemo.ViewModels"
             xmlns:wpftk="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
             x:Name="IconView"
             d:DataContext="{d:DesignInstance Type=viewModels:IconViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d">
    <GroupBox Header="图标-Icon">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Padding="0 5">
                <StackPanel Margin="10" Orientation="Horizontal">
                    <TextBlock Margin="10 0"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource DefaultForeground}">
                        原图标地址:<Hyperlink Click="Hyperlink_Click" NavigateUri="https://www.iconfont.cn/collections/detail?spm=a313x.7781069.1998910419.d9df05512&amp;cid=25353">
                            REMIX ICON
                        </Hyperlink>
                    </TextBlock>
                    <TextBox Width="200"
                             Margin="10 0"
                             rubyer:TextBoxHelper.IsClearable="True"
                             rubyer:TextBoxHelper.Watermark="搜索图标"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                        <rubyer:TextBoxHelper.PreContent>
                            <Button Style="{DynamicResource TextButton}"
                                    rubyer:ButtonHelper.Shape="Circle"
                                    Command="{Binding Search}"
                                    IsDefault="True"
                                    ToolTip="搜索">
                                <rubyer:Icon Type="SearchLine" />
                            </Button>
                        </rubyer:TextBoxHelper.PreContent>
                    </TextBox>
                    <TextBox x:Name="currentTextBox"
                             MinWidth="200"
                             Margin="10 0 0 0"
                             rubyer:TextBoxHelper.PreContent="选中"
                             BorderThickness="0"
                             Text="{Binding CurrentIcon, StringFormat='&lt;rubyer:Icon Type=&quot;{0}&quot; /&gt;'}" />
                    <Button x:Name="copyButton"
                            Style="{StaticResource TextButton}"
                            rubyer:ButtonHelper.Shape="Circle"
                            Click="copyButton_Click"
                            ToolTip="复制">
                        <rubyer:Icon Type="FileCopy2Fill" />
                    </Button>
                </StackPanel>
            </Border>
            <ListBox Grid.Row="1"
                     ItemsSource="{Binding IconTypes}"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     SelectedItem="{Binding CurrentIcon}"
                     VirtualizingPanel.ScrollUnit="Pixel">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <wpftk:VirtualizingWrapPanel MouseWheelDelta="50" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Width="80"
                                    Height="60"
                                    HorizontalAlignment="Center"
                                    ToolTip="{Binding}">
                            <rubyer:Icon Width="28"
                                         Height="28"
                                         Margin="5"
                                         HorizontalAlignment="Center"
                                         Type="{Binding}" />
                            <TextBlock HorizontalAlignment="Center"
                                       Text="{Binding}"
                                       TextTrimming="CharacterEllipsis" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </GroupBox>
</UserControl>
