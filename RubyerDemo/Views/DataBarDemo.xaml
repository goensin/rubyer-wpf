<UserControl x:Class="RubyerDemo.Views.DataBarDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:rubyer="clr-namespace:Rubyer;assembly=Rubyer"
             mc:Ignorable="d">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <GroupBox Margin="0 0 0 10" Header="进度条-ProgressBar">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel VerticalAlignment="Center">
                            <ProgressBar Width="150"
                                         Margin="5"
                                         rubyer:ProgressBarHelper.ShowPercent="True"
                                         rubyer:ProgressBarHelper.Thickness="5"
                                         Value="70" />
                            <ProgressBar Width="150"
                                         Margin="10"
                                         rubyer:ProgressBarHelper.Thickness="5"
                                         IsIndeterminate="True" />
                        </StackPanel>
                        <ProgressBar Height="150"
                                     Margin="10"
                                     rubyer:ProgressBarHelper.ShowPercent="True"
                                     rubyer:ProgressBarHelper.Thickness="5"
                                     Orientation="Vertical"
                                     Value="70" />
                        <ProgressBar Width="5"
                                     Height="150"
                                     Margin="10"
                                     rubyer:ProgressBarHelper.Thickness="5"
                                     IsIndeterminate="True"
                                     Orientation="Vertical" />
                        <ProgressBar Style="{StaticResource CircleProgressBar}"
                                     Margin="10"
                                     ClipToBounds="True"
                                     Value="60" />
                        <ProgressBar Style="{StaticResource CircleProgressBar}"
                                     Margin="10"
                                     rubyer:ProgressBarHelper.ShowPercent="True"
                                     Value="70" />
                        <ProgressBar Style="{StaticResource CircleProgressBar}"
                                     Width="20"
                                     Height="20"
                                     Margin="10"
                                     Value="80" />
                        <ProgressBar Style="{StaticResource CircleProgressBar}"
                                     Width="50"
                                     Height="50"
                                     Margin="10"
                                     rubyer:ProgressBarHelper.Thickness="8"
                                     Value="90" />
                        <ProgressBar Style="{StaticResource CircleProgressBar}"
                                     Width="20"
                                     Height="20"
                                     Margin="10"
                                     rubyer:ControlHelper.SelectedBrush="{DynamicResource Light}"
                                     rubyer:ProgressBarHelper.IsShowBackground="False"
                                     Value="70" />
                        <ProgressBar Style="{StaticResource CircleProgressBar}"
                                     Width="50"
                                     Height="50"
                                     Margin="10"
                                     rubyer:ControlHelper.SelectedBrush="{DynamicResource Dark}"
                                     rubyer:ProgressBarHelper.IsShowBackground="False"
                                     rubyer:ProgressBarHelper.ShowPercent="True"
                                     rubyer:ProgressBarHelper.Thickness="8"
                                     Value="70" />
                        <ProgressBar Style="{StaticResource CircleProgressBar}"
                                     Width="41"
                                     Height="41"
                                     Margin="10"
                                     ClipToBounds="True"
                                     IsIndeterminate="True"
                                     Orientation="Vertical" />
                        <ProgressBar Style="{StaticResource CircleProgressBar}"
                                     Margin="10"
                                     rubyer:ControlHelper.SelectedBrush="{DynamicResource Accent}"
                                     rubyer:ProgressBarHelper.IsShowBackground="False"
                                     IsIndeterminate="True"
                                     Orientation="Vertical"
                                     Value="70" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox Grid.Row="1" Header="滑块-Slider">
                <StackPanel Orientation="Horizontal">
                    <!--  水平  -->
                    <StackPanel Width="500" Margin="10">
                        <Slider Margin="0 10"
                                IsSelectionRangeEnabled="True"
                                IsSnapToTickEnabled="True"
                                Maximum="100"
                                Minimum="0"
                                SelectionEnd="70"
                                SelectionStart="30"
                                TickFrequency="5"
                                TickPlacement="Both"
                                Value="20"
                                rubyer:SliderHelper.DraggingShowValue="True" />
                        <Slider Margin="0 10"
                                Foreground="{DynamicResource Dark}"
                                IsSelectionRangeEnabled="True"
                                Maximum="100"
                                Minimum="0"
                                TickFrequency="5"
                                TickPlacement="TopLeft"
                                Value="80" />
                        <Slider Margin="0 10"
                                rubyer:SliderHelper.SelectionRangeBrush="{DynamicResource Primary}"
                                Foreground="{DynamicResource Accent}"
                                IsSelectionRangeEnabled="True"
                                Maximum="100"
                                Minimum="0"
                                SelectionEnd="90"
                                SelectionStart="70"
                                TickFrequency="5"
                                TickPlacement="BottomRight"
                                Value="50" />
                        <Slider Margin="0 10"
                                IsEnabled="False"
                                IsSelectionRangeEnabled="True"
                                IsSnapToTickEnabled="True"
                                Maximum="100"
                                Minimum="0"
                                SelectionEnd="70"
                                SelectionStart="30"
                                TickFrequency="5"
                                TickPlacement="Both"
                                Value="20" />
                    </StackPanel>
                    <!--  垂直  -->
                    <StackPanel Margin="20 10 0 10" Orientation="Horizontal">
                        <Slider Margin="20 0"
                                Foreground="{DynamicResource Light}"
                                IsSelectionRangeEnabled="True"
                                IsSnapToTickEnabled="True"
                                Maximum="100"
                                Minimum="0"
                                Orientation="Vertical"
                                SelectionEnd="70"
                                SelectionStart="30"
                                TickPlacement="Both"
                                TickFrequency="10"
                                Value="20" 
                                 rubyer:SliderHelper.DraggingShowValue="True" />
                        <Slider Margin="20 0"
                                Foreground="{DynamicResource Dark}"
                                IsSelectionRangeEnabled="True"
                                Maximum="100"
                                Minimum="0"
                                Orientation="Vertical"
                                TickFrequency="20"
                                TickPlacement="TopLeft"
                                Value="40" />
                        <Slider Margin="20 0"
                                Foreground="{DynamicResource Accent}"
                                IsSelectionRangeEnabled="True"
                                Maximum="100"
                                Minimum="0"
                                Orientation="Vertical"
                                TickFrequency="20"
                                TickPlacement="BottomRight"
                                Value="80" />
                        <Slider Margin="20 0"
                                IsEnabled="False"
                                IsSelectionRangeEnabled="True"
                                Maximum="100"
                                Minimum="0"
                                Orientation="Vertical"
                                SelectionEnd="70"
                                SelectionStart="30"
                                TickFrequency="10"
                                Value="20" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>
    </ScrollViewer>
</UserControl>
