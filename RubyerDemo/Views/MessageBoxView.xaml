<UserControl x:Class="RubyerDemo.Views.MessageBoxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:rubyer="clr-namespace:Rubyer;assembly=Rubyer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid Style="{StaticResource FadeLeftStyle}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <GroupBox Header="消息框-MessageBoxR" Margin="0 0 0 10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Button Width="50" Margin="5" Command="{Binding MessageBoxShow}" CommandParameter="1">1</Button>
                        <Button Width="50" Margin="5" Command="{Binding MessageBoxShow}" CommandParameter="2">2</Button>
                        <Button Width="50" Margin="5" Command="{Binding MessageBoxShow}" CommandParameter="3">3</Button>
                        <Button Width="50" Margin="5" Command="{Binding MessageBoxShow}" CommandParameter="4">4</Button>
                        <Button Width="50" Margin="5" Command="{Binding MessageBoxShow}" CommandParameter="5">5</Button>
                        <Button Width="50" Margin="5" Command="{Binding MessageBoxShow}" CommandParameter="6">6</Button>
                        <Button Width="50" Margin="5" Command="{Binding MessageBoxShow}" CommandParameter="7">7</Button>
                        <Button Width="50" Margin="5" Command="{Binding MessageBoxShow}" CommandParameter="8">8</Button>
                        <Button Width="50" Margin="5" Command="{Binding MessageBoxShow}" CommandParameter="9">9</Button>
                        <Button Width="50" Margin="5" Command="{Binding MessageBoxShow}" CommandParameter="10">10</Button>
                        <Button Width="50" Margin="5" Command="{Binding MessageBoxShow}" CommandParameter="11">11</Button>
                        <Button Width="50" Margin="5" Command="{Binding MessageBoxShow}" CommandParameter="12">12</Button>
                    </StackPanel>
                    <rubyer:MessageBoxCard Grid.Row="1" Title="标题">
                        <TextBlock Text="内容"/>
                    </rubyer:MessageBoxCard>
                </Grid>
            </GroupBox>
        </Grid>
    </ScrollViewer>
</UserControl>
